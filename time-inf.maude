fmod TIME-INF is 
    protecting NAT .
    sorts Time TimeInf .
    subsorts Nat < Time < TimeInf .
    op inf : -> TimeInf [ctor] .

    op _<_ : TimeInf TimeInf -> Bool [ditto] .
    op _<=_ : TimeInf TimeInf -> Bool [ditto] .
    op _>_ : TimeInf TimeInf -> Bool [ditto] .
    op _>=_ : TimeInf TimeInf -> Bool [ditto] .

    var T : Time .
    vars INF INF' : TimeInf .

    eq T < inf = true .
    eq inf < INF = false .
    eq INF <= inf = true .
    eq inf <= T = false .
    eq inf > T = true . 
    eq INF > inf = false .
    eq inf >= INF = true .
    eq T >= inf = false .
    
    ops min max : TimeInf TimeInf -> TimeInf [ditto] .
    eq max(INF, inf) = inf .
    eq min(INF, inf) = INF .
endfm 
